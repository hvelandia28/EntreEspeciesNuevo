@model EntreEspeciesNuevo.Models.Categoria

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* Estilos generales */
    body {
        display: flex;
        background-color: #f0f8ff; /* Azul claro */
        color: #333; /* Color de texto principal */
    }

    h1 {
        color: #4169e1; /* Azul real */
        text-align: center;
        margin-bottom: 20px;
    }

    /* Estilos para la sección de edición de categoría */
    .edit-section {
        margin: auto;
        max-width: 400px;
        padding: 20px;
        border: 1px solid #ddd; /* Borde gris claro */
        border-radius: 5px;
        background-color: #fff;
    }

        .edit-section h4 {
            color: #4169e1; /* Azul real */
            text-align: center;
        }

    /* Estilos para el formulario de edición */
    .form-group {
        margin-bottom: 1rem;
    }

    /* Enlace de acción */
    a {
        color: #4169e1; /* Azul real */
        text-decoration: none;
        font-weight: bold;
        margin-right: 10px;
        display: block;
        text-align: center;
        margin-top: 10px;
    }

        a:hover {
            text-decoration: underline;
        }
</style>

<h1>EDITAR</h1>

<div class="edit-section">
    <h4>CATEGORIA</h4>
    <hr />
    <div class="row">
        <div class="col-md-12 text-center">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="IdCategoria" />
                <div class="form-group">
                    <label asp-for="NomCategoria" class="control-label">Nombre de la Categoria</label>
                    <input asp-for="NomCategoria" class="form-control" />
                    <span asp-validation-for="NomCategoria" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="GUARDAR" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>

<div class="text-center">
    <a asp-action="Index">REGRESAR</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const form = document.querySelector('form');
            form.addEventListener('submit', function (event) {
                // ... (Código de validación existente)

                // Aquí puedes hacer una petición AJAX para enviar el formulario al servidor si es necesario
                // Por ahora, mostraremos una alerta de éxito después de un breve retraso
                setTimeout(function () {
                    Swal.fire({
                        icon: 'success',
                        title: 'Éxito',
                        text: 'La categoría se ha editado exitosamente.',
                        timer: 3000, // Duración de la alerta en milisegundos (en este caso, 3000 ms o 3 segundos)
                        showConfirmButton: false // Oculta el botón de confirmación
                    });
                }); 
            });
        });
    </script>

}
